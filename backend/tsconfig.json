{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",           // Specify source folder
    "outDir": "./dist",           // Specify output folder

    // Environment Settings
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],            // Keep only ONE "types" entry

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "forceConsistentCasingInFileNames": true,  // Add this
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,      // Helpful for Node.js
    "allowSyntheticDefaultImports": true,  // Allow default imports from modules with no default export
    "resolveJsonModule": true     // If you import JSON files
  },
  "include": ["src/**/*"],        // Include all files in src folder
  "exclude": ["node_modules", "dist"]  // Exclude these folders
}
